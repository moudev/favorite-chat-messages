{
  "manifest_version": 2,

  "name": "One click Twitch message",
  "description": "Save and send messages with one click to Twitch chat. You can save your favorites messages and send them with only one click",
  "homepage_url": "https://github.com/moudev/one-click-twitch-message",

  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icons/icon-32.png",  
    "default_title": "One click Twitch message",
    "default_popup": "popup/popup.html"
  },

  "icons": {
    "16": "icons/icon-16.png",  
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "storage"
  ]
}
